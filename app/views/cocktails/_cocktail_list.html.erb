<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
       <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1514361892635-6b07e31e75f9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80)">
        <% end %>
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
    <% end %>
   </div>
</div>



