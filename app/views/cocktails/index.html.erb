<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1525268323446-0505b6fe7778?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1952&q=80);">
  <div class="container">
    <h1>Cocktails and Dreams</h1>
  </div>
</div>


<div class="container">
  <%= form_tag cocktails_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a Cocktail"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

</div>
<p><%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary" %></p>

<%= render 'cocktail_list', cocktails: @cocktails %>
